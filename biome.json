{
	"$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
	"formatter": {
		"enabled": true
	},

	"css": {
		"parser": {
			"cssModules": true,
			"tailwindDirectives": true
		}
	},

	"linter": {
		"enabled": true
	},

	"assist": {
		"enabled": false
	},

	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}
